<!DOCTYPE html>
<html>
  <head>
    <title>Catalog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h2 class="my-0 mr-md-auto font-weight-bold"><%= link_to "Catalog", root_path %></h2>
        <% if user_signed_in? %>
            <% if current_user.userparam.nil? %>
                <span class="p-2 text-dark"> <%= link_to "Profile", userparam_show_path %></span>
                <% else %>
                <span class="p-2 text-dark"> <%= link_to "Profile",  userparam_show_path(current_user.id) %></span>
                <% end %>
                </nav>
                <span class="btn btn-outline-primary"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></span>
            <% else %>
                <span class="btn btn-outline-primary"><%= link_to "Log In", new_user_session_path %></span>
                
        <% end %>
        </div>
    <%= yield %>
  </body>
</html>
