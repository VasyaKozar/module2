<%= form_for @user, url: user_path(current_user.id) do |f| %>
  Avatar: <%= f.file_field :avatar %><br />
  Firsname: <%= f.text_field(:firstname, {:class => 'form-control'})%><br />
  Lastname: <%= f.text_field(:lastname, {:class => 'form-control'})%><br />
  Age: <%= f.text_field(:age, {:class => 'form-control'})%><br />
  <%= f.submit("Update", {:class => 'btn btn-success'} )%>

<% end %>
